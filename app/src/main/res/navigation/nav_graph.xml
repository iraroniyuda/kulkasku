<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.rmdev.kulkasku.ui.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/navigation_home" />
    </fragment>

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.rmdev.kulkasku.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_shopFragment"
            app:destination="@id/navigation_shop" />
        <action
            android:id="@+id/action_homeFragment_to_sayurFragment"
            app:destination="@id/navigation_sayur" />
        <action
            android:id="@+id/action_homeFragment_to_buahFragment"
            app:destination="@id/navigation_buah" />
        <action
            android:id="@+id/action_homeFragment_to_sembakoFragment"
            app:destination="@id/navigation_sembako" />
        <action
            android:id="@+id/action_homeFragment_to_frozenFragment"
            app:destination="@id/navigation_frozen" />
        <action
            android:id="@+id/action_homeFragment_to_proteinFragment"
            app:destination="@id/navigation_protein" />
        <action
            android:id="@+id/action_homeFragment_to_bumbuFragment"
            app:destination="@id/navigation_bumbu" />
        <action
            android:id="@+id/action_homeFragment_to_moreFragment"
            app:destination="@id/navigation_more" />

        <action
            android:id="@+id/action_homeFragment_to_productDetailFragment"
            app:destination="@id/productDetailFragment" />

    </fragment>

    <fragment
        android:id="@+id/navigation_sayur"
        android:name="com.rmdev.kulkasku.ui.shop.SayurFragment"
        android:label="Sayur"
        tools:layout="@layout/fragment_sayur">
        <action
            android:id="@+id/action_sayurFragment_to_productDetailFragment"
            app:destination="@id/productDetailFragment" />
        <action
            android:id="@+id/action_sayurFragment_to_homeFragment"
            app:destination="@id/navigation_home" />
    </fragment>

    <fragment
        android:id="@+id/navigation_buah"
        android:name="com.rmdev.kulkasku.ui.shop.BuahFragment"
        android:label="Buah"
        tools:layout="@layout/fragment_buah">
        <action
            android:id="@+id/action_buahFragment_to_productDetailFragment"
            app:destination="@id/productDetailFragment" />
        <action
            android:id="@+id/action_buahFragment_to_homeFragment"
            app:destination="@id/navigation_home" />
    </fragment>

    <fragment
        android:id="@+id/navigation_sembako"
        android:name="com.rmdev.kulkasku.ui.shop.SembakoFragment"
        android:label="Sembako"
        tools:layout="@layout/fragment_sembako">
        <action
            android:id="@+id/action_sembakoFragment_to_productDetailFragment"
            app:destination="@id/productDetailFragment" />
        <action
            android:id="@+id/action_sembakoFragment_to_homeFragment"
            app:destination="@id/navigation_home" />
    </fragment>

    <fragment
        android:id="@+id/navigation_frozen"
        android:name="com.rmdev.kulkasku.ui.shop.FrozenFragment"
        android:label="Frozen"
        tools:layout="@layout/fragment_frozen">
        <action
            android:id="@+id/action_frozenFragment_to_productDetailFragment"
            app:destination="@id/productDetailFragment" />
        <action
            android:id="@+id/action_frozenFragment_to_homeFragment"
            app:destination="@id/navigation_home" />
    </fragment>

    <fragment
        android:id="@+id/navigation_protein"
        android:name="com.rmdev.kulkasku.ui.shop.ProteinFragment"
        android:label="Protein"
        tools:layout="@layout/fragment_protein">
        <action
            android:id="@+id/action_proteinFragment_to_productDetailFragment"
            app:destination="@id/productDetailFragment" />
        <action
            android:id="@+id/action_proteinFragment_to_homeFragment"
            app:destination="@id/navigation_home" />
    </fragment>

    <fragment
        android:id="@+id/navigation_bumbu"
        android:name="com.rmdev.kulkasku.ui.shop.BumbuFragment"
        android:label="Bumbu"
        tools:layout="@layout/fragment_bumbu">
        <action
            android:id="@+id/action_bumbuFragment_to_productDetailFragment"
            app:destination="@id/productDetailFragment" />
        <action
            android:id="@+id/action_bumbuFragment_to_homeFragment"
            app:destination="@id/navigation_home" />
    </fragment>

    <fragment
        android:id="@+id/navigation_more"
        android:name="com.rmdev.kulkasku.ui.more.MoreFragment"
        android:label="Lainnya"
        tools:layout="@layout/fragment_more">
        <action
            android:id="@+id/action_moreFragment_to_academyFragment"
            app:destination="@id/academyFragment" />
        <action
            android:id="@+id/action_moreFragment_to_tipsFragment"
            app:destination="@id/tipsFragment" />
    </fragment>

    <fragment
        android:id="@+id/academyFragment"
        android:name="com.rmdev.kulkasku.ui.academy.AcademyFragment"
        android:label="Academy"
        tools:layout="@layout/fragment_academy" />

    <fragment
        android:id="@+id/tipsFragment"
        android:name="com.rmdev.kulkasku.ui.tips.TipsFragment"
        android:label="Tips"
        tools:layout="@layout/fragment_tips" />

    <fragment
        android:id="@+id/navigation_shop"
        android:name="com.rmdev.kulkasku.ui.shop.ShopFragment"
        android:label="Shop"
        tools:layout="@layout/fragment_shop">
        <action
            android:id="@+id/action_shopFragment_to_productDetailFragment"
            app:destination="@id/productDetailFragment" />
        <action
            android:id="@+id/action_shopFragment_to_homeFragment"
            app:destination="@id/navigation_home" />
    </fragment>

    <fragment
        android:id="@+id/navigation_reels"
        android:name="com.rmdev.kulkasku.ui.reels.ReelsFragment"
        android:label="Reels"
        tools:layout="@layout/fragment_reels">
        <action
            android:id="@+id/action_reelsFragment_to_commentsFragment"
            app:destination="@id/commentsFragment" />
        <action
            android:id="@+id/action_reelsFragment_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>


    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.rmdev.kulkasku.ui.cart.CartFragment"
        android:label="Cart"
        tools:layout="@layout/fragment_cart" />


    <!-- Comment out the HistoryFragment
    <fragment
        android:id="@+id/navigation_history"
        android:name="com.rmdev.kulkasku.ui.history.HistoryFragment"
        android:label="History"
        tools:layout="@layout/fragment_history" />
    -->

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.rmdev.kulkasku.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_sellerPanelFragment"
            app:destination="@id/sellerPanelFragment" />
        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
        <action
            android:id="@+id/action_navigation_profile_to_commentsFragment"
            app:destination="@id/commentsFragment" />
        <action
            android:id="@+id/action_profileFragment_to_userSettingFragment"
            app:destination="@id/userSettingFragment" />
    </fragment>

    <fragment
        android:id="@+id/commentsFragment"
        android:name="com.rmdev.kulkasku.ui.profile.CommentsFragment"
        android:label="Comments"
        tools:layout="@layout/fragment_comments">
        <argument
            android:name="postId"
            app:argType="string" />
        <action
            android:id="@+id/action_productDetailFragment_to_navigation_shop"
            app:destination="@id/navigation_shop" />
    </fragment>

    <fragment
        android:id="@+id/productDetailFragment"
        android:name="com.rmdev.kulkasku.ui.product.ProductDetailFragment"
        android:label="Product Detail"
        tools:layout="@layout/fragment_product_detail">
        <argument
            android:name="productId"
            app:argType="string" />
    </fragment>
    <action
        android:id="@+id/action_productDetailFragment_to_navigation_shop"
        app:destination="@id/navigation_shop" />


    <fragment
        android:id="@+id/sellerPanelFragment"
        android:name="com.rmdev.kulkasku.ui.seller.SellerPanelFragment"
        android:label="Seller Panel"
        tools:layout="@layout/fragment_seller_panel" />

    <fragment
        android:id="@+id/createPostFragment"
        android:name="com.rmdev.kulkasku.ui.createpost.CreatePostFragment"
        android:label="Create Post"
        tools:layout="@layout/fragment_create_post" />

    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.rmdev.kulkasku.ui.EditProfileFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_edit_profile">
        <action
            android:id="@+id/action_editProfileFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>

    <fragment
        android:id="@+id/userSettingFragment"
        android:name="com.rmdev.kulkasku.ui.usersetting.UserSettingFragment"
        android:label="User Settings"
        tools:layout="@layout/fragment_user_setting" />
        <action
            android:id="@+id/action_userSettingFragment_to_sellerPanelFragment"
            app:destination="@id/sellerPanelFragment" />
        <action
            android:id="@+id/action_userSettingFragment_to_createPostFragment"
            app:destination="@id/createPostFragment" />






</navigation>
